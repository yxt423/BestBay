<%= form_for @item,:html => { :multipart => true } do |f| %>

  <%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :category %>
<%= f.select :category, options_for_select(["Select One", "Cat1", "Cat2", "Cat3","Other"]),:disabled => ["Select One"]%>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :base_price %>
<%= f.text_field :base_price %>
<p>
<b> Picture </b><br/>
<%= f.file_field :pic %>
</p>

<%= f.submit "Submit Item for Sale", class: "btn btn-large btn-primary" %>
    <% end %>
