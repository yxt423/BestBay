<% provide(:title, 'Sell Item') %>
<div class="row">
  <div class="" style="float: left;width: 40%">
    <h2>New Item</h2>
  </div>

  <div class="" style="float: right;width: 60%">

    <%= form_for @item,:html => { :multipart => true } do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :category_id %>
        <% if @cats.empty?
             arr = [["All",0]]
           else
             arr = @cats.map { |c| [c.name, c.id ]}
           end
        %>
        <%= f.select :category_id, options_for_select(arr)%>

        <% arr2 = {"for sell" => 0, "for auction" => 1}%>
        <%= f.label :"This item is" %>
        <%= f.select :for_auction, options_for_select(arr2)%>

        <%= f.label :description %>
        <%= f.text_area :description ,:cols => "70", :rows => "5"%>

        <%= f.label :base_price %>
        <%= f.text_field :base_price %>

        <%= f.label :quantity %>
        <%= f.text_field :quantity %>
        <p>
          <b> Picture </b><br/>
          <%= f.file_field :pic %>
        </p>

        <%= f.submit "Submit Item for Sale", class: "btn btn-medium btn-primary" %>
    <% end %>
  </div>
</div>
