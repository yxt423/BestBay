<%= image_tag item.pic.url(:thumb) %><br/>

<% if is_admin? && item.deactivated == true%>
    <%= link_to "#{item.name} (Deactivated)", item %>
<% else %>
    <%= link_to "#{item.name} ", item %>
<% end %>

<% if hotItem(item) %>
    <%= image_tag("hot.jpg", alt: "hot") %>
<% end %>
