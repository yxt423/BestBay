<% provide(:title, @user.fname) %>

<div class="row">
  <div class="" style="float: left;width: 10%">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.fname %>
      </h1>
    </section>
   </div>

  <!-- display all the items that the user has created -->
  <div class="" style="float: right;width: 90%">
  <% if is_admin? %>
    <div class="span10 offset1">
      <!-- to be modified -->
        <%= render 'deactivate_user_form' %>
        <%= link_to "Delete User", "#", class: "btn btn-medium btn-primary" %>
        <%= link_to "Make User an Administrator", "#", class: "btn btn-medium btn-primary" %>
    </div>
    <br></br>
  <% end %>

  <% if is_seller? %>
    <div class="span10 offset1">
    <h4> My items </h4>
      <table class="table table-striped">
         <tr>
            <th>Item Name</th>
            <th>Base Price</th>
            <th>Status</th>
            <th>Options</th>
         </tr>
         <% @items.each do |item| %>
         <% case item.status
              when 0
                @statusStr = "for sell"
              when 1
                @statusStr = "ongoing auction"
              when 2
                @statusStr = "closed auction"
              when 3
                @statusStr = "closed auction"
            end %>
         <tr>
            <td><%= image_tag item.pic.url(:thumb)%><%= link_to item.name, item %></td>
            <td><%= item.base_price %></td>
            <td><%= "#{@statusStr}" %></td>
            <td><% if !item.for_auction %>
              <%= link_to 'Remove', item, method: :delete, data: {confirm: 'Are you sure?'}, remote: true, class: 'delete_item' %>
                <% end %></td>
         </tr>
         <% end %> 
      </table>
    </div>
  <% end %>

  <!-- display all the items that the user has bid on -->
    <div class="span10 offset1">
    <h4> Cart </h4>
      <table class="table table-striped">
         <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Price</th>
         </tr>
         <% @bids.each do |bid| %>
         <tr>
            <% item = Item.find(bid.item_id) %>
            <td><%= image_tag item.pic.url(:thumb)%><%= link_to item.name, item %></td>
            <td><%= bid.quantity %></td>
            <td><%= item.base_price %></td>
            <!--<td><%= link_to 'Delete', item, method: :delete, data: {confirm: 'Are you sure?'}, remote: true, class: 'delete_item' %></td>-->
         </tr>
         <% end %>
      </table>
    </div>

    <!-- display all the items that the user has purchased -->
    <div class="span10 offset1">
    <h4> Purchase History </h4>
      <table class="table table-striped">
         <tr>
            <th>Item Name</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Cost</th>
         </tr>
         <% @purchases.each do |purchase| %>
         <tr>
            <% @item = Item.find(purchase.item_id) %>
            <td><%= image_tag @item.pic.url(:thumb)%><%= link_to @item.name, @item %></td>
            <td><%= purchase.quantity %></td>
            <td><%= purchase.price %></td>
            <td><%= purchase.cost %></td>
         </tr>
         <% end %>
      </table>
    </div>
   </div>
</div>
