<% provide(:title, 'Sign Up') %>
<div class="row">

  <div class="col-md-3 hidden-xs">

  </div>

  <div class="col-md-6 container">
      <h2 style="text-align: left">Sign Up</h2>
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :'First Name' %><br>
    <%= f.text_field :fname %><br>

    <%= f.label :'Last Name' %><br>
    <%= f.text_field :lname %><br>

    <%= f.label :'Email' %><br>
    <%= f.text_field :email %><br>

    <%= f.label :'Password' %><br>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation, "Confirm Password" %><br>
    <%= f.password_field :password_confirmation %><br>
    <br>
    <%= f.check_box :is_seller  %><br>
    <%= f.label :'I want to sell (Credit card information will be required)' %><br>

    <br><br/>
    <%= f.submit "Create my account", class: "btn btn-primary" %>
  <% end %>
  </div>
  <div class="col-md-3 hidden-xs">

  </div>
</div>


